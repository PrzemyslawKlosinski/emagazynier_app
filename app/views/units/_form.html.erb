<%= form_for(@unit) do |f| %>

  <% if @unit.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-error">
          Znaleziono <%= pluralize(@unit.errors.count, "error") %>.
        </div>
      <ul>
      <% @unit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="span5 offset1">
      Nazwa
      <%= f.text_field :name %>
    </div>
  <div class="span5">
    Nazwa krótka
    <%= f.text_field :shortName %>
    </div>
  </div>

<div class="row">
  <span class="pull-right">
    <%= link_to 'Powrót', current_user, class:"btn btn-info" %>
    <%= f.submit "Zapisz", class:"btn btn-info" %>
  </span>
  <br />
</div>

<% end %>
