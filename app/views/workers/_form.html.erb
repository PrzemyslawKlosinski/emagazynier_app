<%= form_for(@worker) do |f| %>

  <% if @worker.errors.any? %>
        <div class="alert alert-error">
          Znaleziono błędów: <%= @worker.errors.count %>
      <ul>
      <% @worker.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  

  <div class="row">
    <div class="span5 offset1">
      Imię Nazwisko<br/>
      <%= f.text_field :name %>
    </div>
  <div class="span5">
    Telefon<br/>
    <%= f.text_field :phone %>
    </div>
  </div>

<div class="row">
  <span class="pull-right">
    <%= link_to 'Powrót', current_user, class:"btn" %>
    <%= f.submit "Zapisz", class:"btn btn-info" %>
  </span>
  <br />
</div>

<% end %>
