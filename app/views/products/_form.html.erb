<%= form_for(@product) do |f| %>


    <% if @product.errors.any? %>
        <div class="alert alert-error">
          Znaleziono błędów: <%= @product.errors.count %>
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<br />
<div class="row-fluid">
    <div class="span3">Nazwa artykułu</div>
    <div class="span3"><%= f.text_field :name %></div>
    <div class="span3">Kategoria artykułu</div>
    <div class="span3">
      <!-- <collection_select(:category, :category_id, @categories, :id, :name, {:prompt => false}, {:class=>'my-custom-class'}) %> -->
      <%= collection_select(:product, :category_id, @categories, :id, :name, {:prompt => false}) %>
    </div>
</div>

<div class="row-fluid">
    <div class="span3">Nazwa oryginalna</div>
    <div class="span3"><%= f.text_field :nameOryginal %></div>
    <div class="span3">Jednostka magazynowania</div>
    <div class="span3">
      <!-- < select("product", "unit", Product::MYUNITS, {:include_blank => false) %> -->
      <!-- < select("product", "unit_id", current_user.units.collect {|p| [ p.name, p.id ] }, {:prompt => 'wybierz jednostke'}) %> -->
      <!-- < collection_select(:product, :unit_id, @units, :id, :name, {:prompt => 'wybierz jednostke', :include_blank => brak}) %> -->
      <%= collection_select(:product, :unit_id, @units, :id, :name) %>
    </div>
</div>


<div class="row-fluid">
    <div class="span3"><strong>Producent</strong></div>
    <div class="span3"><strong>Kolor</strong></div>
    <div class="span3"><strong>Przeznaczenie</strong></div>
    <div class="span3"><strong>Położenie</strong></div>
</div>
<div class="row-fluid">
    <div class="span3"><%= f.text_field :manufacturer %></div>
    <div class="span3"><%= f.text_field :color %></div>
    <div class="span3"><%= f.text_field :intended %></div>
    <div class="span3"><%= f.text_field :location %></div>
</div>


<div id="demo" class="collapse">

<div class="row-fluid">
  <div class="span3">
    Rozmiar<br/><%= f.text_field :size %>
    Kształt<br/><%= f.text_field :shape %>
  </div>
  <div class="span3">
    Opis <br /> <%= f.text_area :description, :rows=>5, :cols=>4 %>
  </div>
    <div class="span3">
    Ostrzeżenie<br />
    <%= f.text_area :warningNote, :rows=>5, :cols=>4 %>
  </div>
      <div class="span3">
        Czy wyświetlać ostrzeżenia? <br />
         <%= f.check_box :isWarningShow %>
      </div>
</div>

</div>



<div class="row-fluid">

  <div class="span3">
    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo">
          Pozostałe atrybuty
    </button>
    </div>

    <div class="span3 offset5">
     <div class="pull-right">
            <%= f.submit 'Zapisz', class:"btn btn-info" %>
     </div>      
    </div>

</div>









</div>

<% end %>
