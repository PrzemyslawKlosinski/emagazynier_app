<%= form_for(@location) do |f| %>

  <% if @location.errors.any? %>
    <div class="alert alert-error">
          Znaleziono błędów: <%= @location.errors.count %>
      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="span5 offset1">
      Kod pocztowy
      <%= f.text_field :zip_code %>
    </div>
  <div class="span5">
      Miasto
    <%= f.text_field :city %>
    </div>
  </div>

  <div class="row">
    <div class="span5 offset1">
      Adres
      <%= f.text_field :address %>
    </div>
  <div class="span5">
      Telefon
    <%= f.text_field :phone %>
    </div>
  </div>

<div class="row">
  <span class="pull-right">
    <%= link_to 'Powrót', firms_path, class:"btn btn-info" %>
    <%= f.submit "Zapisz", class:"btn btn-info" %>
  </span>
  <br />
</div>

<% end %>
